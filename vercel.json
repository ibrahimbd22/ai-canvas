{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "frontend/pages/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "gemini_api_key",
    "FB_PAGE_ID": "fb_page_id",
    "FB_PAGE_ACCESS_TOKEN": "fb_page_access_token",
    "CRON_SECRET": "cron_secret"
  }
}